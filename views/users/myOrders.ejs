<%- include('../layouts/userLayout/header.ejs') %>
<%- include('../layouts/userLayout/navbar.ejs') %>

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
      <div class="col-12">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="#">Profile</a></li>
              <li class="breadcrumb-item " aria-current="page">Orders</li>
            </ol>
          </nav>
      </div>
    </div>
  </div>
  <!-- Breadcrumb End -->
  
  <!-- Cart Start -->
  <div class="container-fluid" id="reloadDiv">
    <div class="row px-xl-5">
      <div class=" table-responsive mb-5">
        <table
          class="table table-light table-borderless table-hover mb-0">
          <thead class="thead-dark">
            <tr>
              <th>Product Name</th>
              <th>Date</th>
              <th>Transaction ID</th>
              <th>Total Price</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody class="align-middle">
            <!-- //if condition goes here -->
            <% if (orderData.length > 0) {
                orderData.forEach((order) => {
                  order.products.forEach((product) => { 
              %>
  
            <tr>
              <td class="align-middle">
                <img width="30px" height="40px" src="/adminAsset/adminImages/<%=product.productId.image[0]%>" alt="">&nbsp<%=product.productId.productName %></td>
                <%}) %>
              <td class="align-middle"><%= order.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g,'-') %></td>
              <td class="align-middle"><%= order._id %></td>
              <td class="align-middle"><%= order.totalAmount %></td>
              <td class="align-middle"><a href="/singleOrder/<%= order._id %>"><button type="button" class="le-btn small">Details</button></a> </td>
            </tr>
            <% }); }else{ %>
                                    
                <h1>No any item in orders</h1>
                <% } %>
          </tbody>
        </table>
      </div>
  
    </div>
  </div>
  <!-- Cart End -->

<%- include('../layouts/userLayout/footer.ejs') %>